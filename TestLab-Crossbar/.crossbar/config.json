{
    "version": 2,
    "controller": {},
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "realm2",
                    "roles": [
                        {
                            "name": "anonymous",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "universal",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8080
                    },
                    "rawsocket": {
                    },
                    "websocket": {
                        "ws": {
                            "type": "websocket"
                        }
                    },
                    "web": {
                        "paths": {
                            "/": {
                                "type": "static",
                                "directory": "../web"
                            },
                            "call": {
                                "type": "caller",
                                "realm": "realm2",
                                "role": "anonymous"
                            },
                            "publish": {
                                "type": "publisher",
                                "realm": "realm2",
                                "role": "anonymous",
                                "options": {
                                    "debug": false
                                }
                            }                        
                        }
                    }
                }
            ]
        },
        {
            "type": "container",
            "options": {
                "pythonpath": [
                    ".."
                ]
            },
            "components": [                
                {
                    "type": "class",
                    "classname": "crossbar.adapter.rest.MessageForwarder",
                    "realm": "realm2",
                    "extra": {
                        "subscriptions": [
                            {
                                "url": "http://web.testlab.local:9500",
                                "topic": "com.testlab.withings_healthconnect_bodytemp_update"
                            },
                            {
                                "url": "http://web.testlab.local:9500",
                                "topic": "com.testlab.withings_healthconnect_bloodpressure_update"
                            },
                            {
                                "url": "http://web.testlab.local:9500",
                                "topic": "com.testlab.withings_healthconnect_avgheartrate_update"
                            },
                            {
                                "url": "http://oulu-testlab-measurements.eu-de.mybluemix.net/data",
                                "topic": "com.testlab.withings_ibm_bodytemp_update"
                            },
                            {
                                "url": "http://oulu-testlab-measurements.eu-de.mybluemix.net/data",
                                "topic": "com.testlab.withings_ibm_bloodpressure_update"
                            },    
                            {
                                "url": "http://oulu-testlab-measurements.eu-de.mybluemix.net/data",
                                "topic": "com.testlab.withings_ibm_avgheartrate_update"
                            }                                                                       
                        ],
                        "method": "POST",
                        "expectedcode": 200,
                        "debug": true
                    },
                    "transport": {
                        "type": "websocket",
                        "endpoint": {
                            "type": "tcp",
                            "host": "web.testlab.local",
                            "port": 8080
                        },
                        "url": "ws://web.testlab.local:8080/ws"
                    }
                },
                {
                    "type": "class",
                    "classname": "mqtt_msgfwd.AppSession",
                    "realm": "realm2",
                    "transport": {
                        "type": "websocket",
                        "endpoint": {
                            "type": "tcp",
                            "host": "web.testlab.local",
                            "port": 8080
                        },
                        "url": "ws://web.testlab.local:8080/ws"
                    }
                },                
                {
                    "type": "class",
                    "classname": "withings_node.AppSession",
                    "realm": "realm2",
                    "transport": {
                        "type": "websocket",
                        "endpoint": {
                            "type": "tcp",
                            "host": "web.testlab.local",
                            "port": 8080
                        },
                        "url": "ws://web.testlab.local:8080/ws"
                    }
                },
                {
                    "type": "class",
                    "classname": "haltian_node.AppSession",
                    "realm": "realm2",
                    "transport": {
                        "type": "websocket",
                        "endpoint": {
                            "type": "tcp",
                            "host": "web.testlab.local",
                            "port": 8080
                        },
                        "url": "ws://web.testlab.local:8080/ws"
                    }
                },
                {
                    "type": "class",
                    "classname": "ekg_node.AppSession",
                    "realm": "realm2",
                    "transport": {
                        "type": "websocket",
                        "endpoint": {
                            "type": "tcp",
                            "host": "web.testlab.local",
                            "port": 8080
                        },
                        "url": "ws://web.testlab.local:8080/ws"
                    }
                }
            ]
        }
    ]
}
